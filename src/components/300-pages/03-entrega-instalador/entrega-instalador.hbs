<div class="page">

  {{> @navbar }}

  <main class="main-content">
    <article class="main-content__item">
      <div class="main-content__header">
        <h2 class="main-content__heading">
          <span class="main-content__heading-icon">
            <svg>
              <use xlink:href="../../img/sprite.svg#delivery">
            </svg>
          </span>
          {{pageHeading}}
        </h2>
        <h3 class="main-content__subheading">{{pageSubheading}}</h3>
      </div>

      <div class="main-content__content">
        {{render '@progressbar'}}

        <div class="main-content__actions main-content__actions--margin main-content__actions--filter">
          <div class="main-content__actions-col">
            {{> @dropdown dropdownLabel="Seleccionar técnico"}}
          </div>
          <div class="main-content__actions-col">
            {{> @dropdown dropdownLabel="Seleccionar proyecto-site"}}
          </div>
          <div class="main-content__actions-col">
            {{> @dropdown dropdownLabel="Tipo de acción"}}
          </div>
          <div class="main-content__actions-col">
            {{> @button--primary btnModifier="btn--primary" btnText="Validar"}}
          </div>

        </div>

        <h3 class="main-content__heading-md">
          <span class="main-content__heading-icon">
            <svg>
              <use xlink:href="../../img/sprite.svg#list">
            </svg>
          </span>
          <span>Listado de materiales a entregar</span>
        </h3>
        <p class="main-content__results">Resultados: 15-20 de 325</p>
        {{> @table tableDate= true tableDescription=true}}

        <div class="main-content__footer">
          {{render '@pagination'}}

          <div class="main-content__actions main-content__actions--fixed">
            {{> @button--primary btnModifier="btn--primary" btnText="Guardar"}}
            {{> @button--link btnModifier="btn--link" btnText="Cancelar"}}
          </div>
        </div>

      </div>
    </article>
  </main>

</div>
